<h1>Posts</h1>

<h4><a href="/posts/new">New Post</a></h4>

<table>
  <thead>
    <th></th>
    <th>投稿者</th>
    <th></th>
    <th>スポット名</th>
    <th>スポット詳細</th>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= link_to user_path(post.user.id) do %>
            <%= image_tag post.user.get_profile_image(50,50) %>
          <% end %>
        </td>
        <td>
          <%= link_to user_path(post.user.id) do %>
            <%= post.user.name %>
          <% end %>
        </td>
        <td>
          <%= link_to post_path(post.id) do %>
            <%= image_tag post.get_post_image(100,100) %>
          <% end %>
        </td>
        <td>
          <%= link_to post_path(post.id) do %>
            <%= post.title %>
          <% end %>
        </td>
        <td><%= post.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>