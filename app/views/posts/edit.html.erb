<div class="mx-auto col-11 col-sm-10 col-lg-7 col-xl-8">
  <h3>編集</h3>

  <%= render 'layouts/error_messages', resource: @post %>

  <div>
    <%= form_with model: @post, url: post_path(@post), method: :patch do |f| %>
      <p>スポット名
      <%= f.text_field :title, class: "form-control form-control-sm" %></p>
      <p>スポット詳細
      <%= f.text_area :body, class: "form-control form-control-sm" %></p>
      <p>郵便番号
      <%= text_field_tag :zipcode, nil, class: "form-control form-control-sm" %></p>
      <p>住所
      <%= f.text_area :address, class: "form-control form-control-sm" %></p>
      <p>電話番号
      <%= f.text_field :telephone_number, class: "form-control form-control-sm" %></p>
      <p>営業時間
      <%= f.text_area :opening_times, class: "form-control form-control-sm" %></p>
      <p>定休日
      <%= f.text_area :closed_day, class: "form-control form-control-sm" %></p>
      <p>画像<br>
      <%= f.file_field :post_image, accept: "image/*" %></p>

      <div class="mb-3">
        <p>タグを選択</p>
        <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :tag_name do |b| %>
          <%= b.label { b.check_box + " #{b.text}" } %><br>
        <% end %>
      </div>

      <%= f.submit "Update", class: "btn btn-outline-success" %>
    <% end %>
      <br>
    <% if @post.user == current_user %>
      <%= link_to "Destroy", post_path(@post), method: :delete, "data-confirm" => "この投稿を本当に削除しますか？", class: "btn btn-danger" %>
    <% end %>
  </div>
  <br>
  <%= link_to "Back", posts_path %>
</div>