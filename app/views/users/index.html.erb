<h3><strong>ユーザーリスト</strong></h3>

<table class="table">
  <thead class="text-center">
    <th width="40%"></th>
    <th width="60%">ユーザー名</th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td width="40%">
          <%= link_to user_path(user.id) do %>
            <%= image_tag user.get_profile_image(80,80) %>
          <% end %>
        </td>
        <td width="60%">
          <%= link_to user_path(user.id) do %>
            <%= user.name %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users, class: "d-flex justify-content-center" %>