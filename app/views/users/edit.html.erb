<div class="mx-auto col-11 col-sm-10 col-lg-7 col-xl-8">
  <h3>Editing User</h3>

  <%= render 'layouts/error_messages', resource: @user %>

  <div>
    <%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
      <%= image_tag @user.get_profile_image(100,100) %>
      <p>画像<br>
      <%= f.file_field :profile_image, accept: "image/*" %></p>
      <p>ユーザー名
      <%= f.text_field :name, class: "form-control form-control-sm" %></p>
      <p>Email
      <%= f.text_field :email, class: "form-control form-control-sm" %></p>
      <p>Password
      <%= f.text_field :password, class: "form-control form-control-sm" %></p>
      <%= f.submit "Update", class: "btn btn-outline-success" %><br>
      <br>
      <%= link_to "Destroy", user_path(@user), method: :delete, "data-confirm" => "【退会確認】退会しますか？", class: "btn btn-danger" %>
    <% end %>
  </div>
  <br>
  <%= link_to "Back", users_path %>
</div>