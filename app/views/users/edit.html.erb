<h1>Editing User</h1>

<%= render 'layouts/error_messages', resource: @user %>

<div>
  <%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
    <%= image_tag @user.get_profile_image(80,80) %>
    <p>画像</p>
    <%= f.file_field :profile_image, accept: "image/*" %><br>
    <br>
    <p>ユーザー名</p>
    <%= f.text_field :name %><br>
    <br>
    <p>Email</p>
    <%= f.text_field :email %><br>
    <br>
    <p>Password</p>
    <%= f.text_field :password %><br>
    <br>
    <%= f.submit "Update", class: "btn btn-outline-success" %><br>
    <br>
    <%= link_to "Destroy", user_path(@user), method: :delete, "data-confirm" => "【退会確認】退会しますか？", class: "btn btn-danger" %>
  <% end %>
</div>
<br>
<%= link_to "Back", users_path %>
