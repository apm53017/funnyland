<% if user_signed_in? %>
  <%= form_with url: search_path, method: :get, local: true, class: "d-flex" do |f| %>
    <%= f.text_field :content, class: "form-control me-2", placeholder: "Search", aria: { label: "Search" } %>
    <%= f.select :model, options_for_select({ "User" => "user", "Post" => "post" }) %>
    <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }) %>
    <%= f.submit 'Search', class: "btn btn-outline-success" %>
  <% end %>
<% end %>