<h1>Posts</h1>

<table>
  <thead>
    <th></th>
    <th>投稿者</h1>
    <th></th>
    <th>スポット名</th>
    <th>スポット詳細</th>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= link_to admin_user_path(post.user.id) do %>
            <%= image_tag post.user.get_profile_image(50,50) %>
          <% end %>
        </td>
        <td>
          <%= link_to admin_user_path(post.user.id) do %>
            <%= post.user.name %>
          <% end %>
        </td>
        <td>
          <%= link_to admin_post_path(post.id) do %>
            <%= image_tag post.get_post_image(100,100) %>
          <% end %>
        </td>
        <td>
          <%= link_to admin_post_path(post.id) do %>
            <%= post.title %>
          <% end %>
        </td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', admin_post_path(post.id), class: "btn btn-outline-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to "Back", admin_root_path %>