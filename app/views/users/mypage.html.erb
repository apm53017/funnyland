<h3><strong>マイページ</strong></h3>
<br>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <div class="container">
    <h4 class="d-flex justify-content-between align-items-center mb-5">
      <%= @user.name %>
      <%= link_to edit_user_path(@user.id) do %>
        <button type="button"  class="btn btn-outline-success">
          <i class="fa-solid fa-user-gear"> 編集</i>
        </button>
      <% end %>
    </h4>
  </div>      
</div>


<h5>投稿一覧</h5>
<table class="table">
  <thead class="text-center">
    <th width="30%"></th>
    <th width="70%">スポット名</th>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= link_to post_path(post.id) do %>
            <%= image_tag post.get_post_image(100,100) %>
          <% end %>
        </td>
        <td>
          <%= link_to post_path(post.id) do %>
            <%= post.title %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @posts, class: "d-flex justify-content-center" %>